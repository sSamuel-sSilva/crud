<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lista de Usuários</title>
</head>
<body>
  <h1>Lista de Usuários</h1>
  <a href="/users/add">Adicionar Novo Usuário</a>
  <table border="1" cellpadding="10">
    <thead>
      <tr>
        <th>ID</th>
        <th>Email</th>
      </tr>
    </thead>
    <tbody>
      <% if (users.length > 0) { %>
        <% users.forEach(user => { %>
          <tr>
            <td><%= user.id %></td>
            <td><%= user.email %></td>
            <td>
              <a href="/users/edit/<%= user.id %>">Editar</a>
              <form action="/users/delete/<%= user.id %>" method="POST" style="display:inline;">
                <button type="submit" onclick="return confirm('Tem certeza que deseja deletar este Usuário?')">Deletar</button>
              </form>
            </td>
          </tr>
        <% }) %>
      <% } else { %>
        <tr>
          <td colspan="5">Nenhum usuário encontrado.</td>
        </tr>
      <% } %>
    </tbody>
  </table>
</body>
</html>